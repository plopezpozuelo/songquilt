<% provide(:title, @user.first_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.first_name %> <%= @user.last_name %>
      </h1>

      <h2>
        <%= @user.email %>
      </h2>
      <a href="http://www.songkick.com/users/<%= @user.sk_username %>">
        <%= @user.sk_username %>
      </a>
    </section>
  </aside>
</div>
